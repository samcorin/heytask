<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 ">
        <h1>New Service</h1>
        <%= simple_form_for(@service) do |f| %>
          <%= f.input :name %>
          <%= f.input :address, id: "service_address" %>
          <%= f.input :category, collection: @categories.each { |item| item }  %>
          <%= f.input :description %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.input :price %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
